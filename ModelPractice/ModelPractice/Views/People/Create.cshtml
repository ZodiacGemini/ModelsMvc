@using ModelPractice.Models
@model PersonCreateVM
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <title>Create person</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</head>
<body>
    <h1 class="jumbotron" style="text-align:center;">Create person</h1>
    <form asp-action="Create" class="input-group" style="display:flex; flex-direction:column; justify-content:center; max-width:400px; margin:auto">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
        <br />
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
        <br />
        <label asp-for="AcceptTerms"></label>
        <input asp-for="AcceptTerms" />
        <span asp-validation-for="AcceptTerms"></span>
        <br />
        <input type="submit" class="btn btn-danger" value="Create" />
    </form>
</body>
</html>